<%= render 'users/list', book: @book_new, user: @user %>
<div class="col-xs-9">
  <h1>Book detail</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>title</th>
          <th>body</th>
        </tr>
      </thead>
     <tbody>
       <tr>
         <td>
           <%= link_to user_path(@book.user.id) do %>
           <%= attachment_image_tag @book.user, :profile_image, size: "100x100" %>
           <p><%= @book.user.name %></p>
           <% end %>
         </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
          <% end %>
       </tr>
     </tbody>
    </table>
</div>
