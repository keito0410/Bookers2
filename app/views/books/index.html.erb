<header>
  <%= link_to "Books" %>
</header>

<h4>Books</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @book && @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
  <% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

<h1>新規投稿<h1>

<%= form_for(@book) do |f| %>

<h4>タイトル</h4>

<%= f.text_field :title %>

<h4>本文<h4>

<%= f.text_area :body %>

<%= f.submit '送信' %>

<% end %>