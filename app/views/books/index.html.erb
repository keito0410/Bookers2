<h4>Books</h4>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>新規投稿<h1>

<%= form_for(@book) do |f| %>

<h4>タイトル</h4>

<%= f.text_field :title %>

<h4>本文<h4>

<%= f.text_area :body %>

<%= f.submit '送信' %>

<% end %>