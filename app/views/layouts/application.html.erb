<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left text-white">
          <div>Bookers</div>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" >
            <% if user_signed_in? %>
              <li class="btn">
                <span class="glyphicon glyphicon-home text-muted" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-user text-muted" aria-hidden="true"><%= link_to "Users", users_path %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-book text-muted" aria-hidden="true"><%= link_to "Books", books_path %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-log-out text-muted" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete %></span>
              </li>
            <% else %>
              <li class="btn">
                <span class="glyphicon glyphicon-home text-muted" aria-hidden="true"><%= link_to "Home", "/" %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-link text-muted" aria-hidden="true"><%= link_to "about", home_about_path %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-edit text-muted" aria-hidden="true"><%= link_to "Sign up", new_user_registration_path %></span>
              </li>
              <li class="btn">
                <span class="glyphicon glyphicon-log-in text-muted" aria-hidden="true"><%= link_to "login", new_user_session_path %></span>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>

