<h4>User info</h4>

<%= form_for(@user) do |f| %>

	<label>名前</label>
	<%= f.text_field :name %>

	<p>自己紹介</p>
    <%= f.text_area :introduction %>

     <%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb" %>
    <br>
    <label>ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

	<%= f.submit "変更を保存" %>

<% end %>