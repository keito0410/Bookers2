<%= render 'users/list', book: @book_new, user: @user, current_user: @user %>
      <div class="col-xs-9">
        <h1>Books</h1>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                  <%= attachment_image_tag book.user, :profile_image, size: "100x100" %>
                 </td>
                 <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>




