<%= render 'users/list', book: @book_new, user: current_user %>
      <div class="col-xs-9">
        <h1>Books</h1>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>title</th>
                <th>Optinion</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <%= link_to book_path(book.id) do  %>
                    <td><%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb" %></td>
                    <td><%= book.title %></td>
                  <% end %>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>




